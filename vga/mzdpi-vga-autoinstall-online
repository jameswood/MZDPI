#!/bin/sh

do_dts_dtb() {
# now create dts file
cat <<\EOF > /boot/overlays/mzdpi.dts && 
/dts-v1/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <0xffffffff>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <0x01>;
		};
	};

	fragment@1 {
		target = <0xffffffff>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <0x01>;
		};
	};

	fragment@2 {
		target = <0xffffffff>;
		__overlay__ {
			dpi16_pins {
				brcm,pins = <0x00 0x01 0x02 0x03 0x04 0x05 0x06 0x0c 0x0d 0x0e 0x0f 0x10 0x11 0x14 0x15 0x16 0x17 0x18>;
				brcm,function = <0x06>;
				brcm,pull = <0x00>;
				phandle = <0x01>;
			};
		};
	};

	__symbols__ {
		dpi16_pins = "/fragment@2/__overlay__/dpi16_pins";
	};

	__fixups__ {
		fb = "/fragment@0:target:0";
		vc4 = "/fragment@1:target:0";
		gpio = "/fragment@2:target:0";
	};

	__local_fixups__ {
		fragment@0 {
			__overlay__ {
				pinctrl-0 = <0x00>;
			};
		};
	};
};
EOF
dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o /boot/overlays/mzdpi.dtbo /boot/overlays/mzdpi.dts
}

do_create_conf() {
if [ -f "/etc/X11/xorg.conf.d/99-calibration.conf" ]; then
	return
fi

mkdir /etc/X11/xorg.conf.d
cat <<EOF > /etc/X11/xorg.conf.d/99-calibration.conf 
Section "InputClass"
	Identifier	"calibration"
	MatchProduct	"ADS7846 Touchscreen"
	Option	"Calibration"	"195 3895 240 3813"
	Option	"SwapAxes"	"0"
EndSection

EOF

}

apt update
apt install xserver-xorg-input-evdev xinput-calibrator matchbox-keyboard -y

if [ -f "/usr/share/X11/xorg.conf.d/40-libinput.conf" ]; then
	mv /usr/share/X11/xorg.conf.d/40-libinput.conf /usr/share/X11/xorg.conf.d/40-libinput.bak
fi

DTBFILE=/boot/bcm2708-rpi-0-w.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x8 0x7>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x1>;" temp/temp.dts; then
			echo "\nZERO-W";
			sed temp/temp.dts -i -e "s/brcm,function = <0x1>;/brcm,function = <0x6>;/"
			if [ ! -f temp/bcm2708-rpi-0-w.dtb.bak ]; then
				cp /boot/bcm2708-rpi-0-w.dtb temp/bcm2708-rpi-0-w.dtb.bak
			fi
			dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
	# rm temp/temp.dts
fi


DTBFILE=/boot/bcm2708-rpi-0.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x8 0x7>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x1>;" temp/temp.dts; then
			echo "\nZERO";
			sed temp/temp.dts -i -e "s/brcm,function = <0x1>;/brcm,function = <0x6>;/"
			if [ ! -f temp/bcm2708-rpi-0.dtb.bak ]; then
				cp /boot/bcm2708-rpi-0.dtb temp/bcm2708-rpi-0.dtb.bak
			fi
			dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2708-rpi-zero-w.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\nZERO-W";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2708-rpi-zero-w.dtb.bak ]; then
				cp /boot/bcm2708-rpi-zero-w.dtb temp/bcm2708-rpi-zero-w.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-phys_property -W no-mboxes_property -W no-power_domains_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2708-rpi-zero.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\nZERO";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2708-rpi-zero.dtb.bak ]; then
				cp /boot/bcm2708-rpi-zero.dtb temp/bcm2708-rpi-zero.dtb.bak
			fi
			dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2708-rpi-b-plus.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\n1B+";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2708-rpi-b-plus.dtb.bak ]; then
				cp /boot/bcm2708-rpi-b-plus.dtb temp/bcm2708-rpi-b-plus.dtb.bak
			fi
			dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2708-rpi-cm.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\nCM";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2708-rpi-cm.dtb.bak ]; then
				cp /boot/bcm2708-rpi-cm.dtb temp/bcm2708-rpi-cm.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-power_domains_property -W no-phys_property -W no-mboxes_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2709-rpi-2-b.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\n2B";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2709-rpi-2-b.dtb.bak ]; then
				cp /boot/bcm2709-rpi-2-b.dtb temp/bcm2709-rpi-2-b.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-power_domains_property -W no-phys_property -W no-mboxes_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2710-rpi-3-b.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\n3B";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2710-rpi-3-b.dtb.bak ]; then
				cp /boot/bcm2710-rpi-3-b.dtb temp/bcm2710-rpi-3-b.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-power_domains_property -W no-phys_property -W no-mboxes_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2710-rpi-3-b-plus.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\n3B+";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2710-rpi-3-b-plus.dtb.bak ]; then
				cp /boot/bcm2710-rpi-3-b-plus.dtb temp/bcm2710-rpi-3-b-plus.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-power_domains_property -W no-phys_property -W no-mboxes_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

DTBFILE=/boot/bcm2710-rpi-cm3.dtb
if [ -f "$DTBFILE" ]; then
	dtc -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dtb -O dts -o temp/temp.dts $DTBFILE

	if grep -q "brcm,pins = <0x08 0x07>;" temp/temp.dts; then
		if grep -q "brcm,function = <0x01>;" temp/temp.dts; then
			echo "\nCM3";
			sed temp/temp.dts -i -e "s/brcm,function = <0x01>;/brcm,function = <0x06>;/"
			if [ ! -f temp/bcm2710-rpi-cm3.dtb.bak ]; then
				cp /boot/bcm2710-rpi-cm3.dtb temp/bcm2710-rpi-cm3.dtb.bak
			fi
			dtc -W no-thermal_sensors_property -W no-power_domains_property -W no-phys_property -W no-mboxes_property -W no-dmas_property -W no-gpios_property -W no-clocks_property -W no-unique_unit_address -W no-avoid_unnecessary_addr_size -W no-unit_address_vs_reg -I dts -O dtb -o $DTBFILE temp/temp.dts
		fi
	fi
fi

do_create_conf
do_dts_dtb

cp /etc/rc.local temp/rc.local
if [ ! -f temp/rc.local ]; then
	cp temp/rc.local temp/rc.bak
fi
sed -i "/sudo raspi-gpio set 7-8 a2/d" temp/rc.local
sed -i "/exit 0/d" temp/rc.local
echo "sudo raspi-gpio set 7-8 a2" >> temp/rc.local
echo "exit 0" >> temp/rc.local
cp temp/rc.local /etc/rc.local

cp /boot/config.txt /temp/config.txt
if [ ! -f temp/config.bak ]; then
	cp temp/config.txt temp/config.bak
fi
sed -i "/gpio=18=/d" /temp/config.txt
sed -i "/gpio=7-8=/d" /temp/config.txt
sed -i "/dtparam=spi=/d" /temp/config.txt
sed -i "/dtoverlay=ads7846/d" /temp/config.txt
sed -i "/display_rotate=/d" /temp/config.txt
sed -i "/dtoverlay=mzdpi/d" /temp/config.txt
sed -i "/framebuffer_width=/d" /temp/config.txt
sed -i "/framebuffer_height=/d" /temp/config.txt
sed -i "/enable_dpi_lcd=/d" /temp/config.txt
sed -i "/display_default_lcd=/d" /temp/config.txt
sed -i "/dpi_group=/d" /temp/config.txt
sed -i "/dpi_mode=/d" /temp/config.txt
sed -i "/dpi_output_format=/d" /temp/config.txt
sed -i "/hdmi_timings=/d" /temp/config.txt

echo "gpio=18=op,dh" >> /temp/config.txt
echo "gpio=7-8=a2" >> /temp/config.txt
echo "dtparam=spi=on" >> /temp/config.txt
echo "dtoverlay=ads7846,penirq=27,swapxy=1,xmin=200,xmax=3850,ymin=200,ymax=3850" >> /temp/config.txt
echo "display_rotate=3" >> /temp/config.txt
echo "dtoverlay=mzdpi" >> /temp/config.txt
echo "framebuffer_width=640" >> /temp/config.txt
echo "framebuffer_height=480" >> /temp/config.txt
echo "enable_dpi_lcd=1" >> /temp/config.txt
echo "display_default_lcd=1" >> /temp/config.txt
echo "dpi_group=2" >> /temp/config.txt
echo "dpi_mode=87" >> /temp/config.txt
echo "dpi_output_format=0x07f003" >> /temp/config.txt
echo "hdmi_timings=480 0 41 20 60 640 0 5 10 10 0 0 0 60 0 32000000 1" >> /temp/config.txt

cp /temp/config.txt /boot/config.txt
echo "You should now reboot üëç"